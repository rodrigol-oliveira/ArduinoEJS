<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <title>iOne</title>
  <!-- jQuery (necessary for Bootstrap'<s></s> JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
  <script src="js/bootstrap.min.js"></script>
  <script src="js/bootstrap-select.min.js"></script>

  <!-- Bootstrap -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/bootstrap-select.min.css" rel="stylesheet">

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->

      

      <link rel="stylesheet" type="text/css" href="../css/style.css">
      <link rel="stylesheet" type="text/css" href="../css/fonts.css">
      <!--<link href="https://fonts.googleapis.com/css?family=Baloo+Paaji" rel="stylesheet"> -->

      <body>

        <div class="container">
          <div class="header">
            <h1>iOne Jardim Inteligente</h1>
            <h2>alterar jardim</h2>
          </div>

          <div class="formulario">

            <div class="row">
              <div class="col-xs-12 col-md-4"></div>
              <div class="col-xs-12 col-md-4">
                <form method="post" action="/alterarJardim">

                  <fieldset>
                   <legend>detalhes do jardim</legend>
                   <div class="form-group">
                     <label>nome do jardim</label>
                     <input  class="form-control" type="text" name="nome" value="<%- jardim.nome_jardim %>" required>
                   </div>
                   <div class="form-group">
                     <label>serial iOne</label>
                     <input  class="form-control" type="text" name="serial" value="<%- jardim.serial %>" required>
                   </div>
                   <div class="form-group">
                    <label>plantas</label>

                    <select  class="selectpicker" data-width="100%" name="planta" multiple required>
                     <%for(i=0; i<plantas.length; i++){%>
                     <option id='p<%-i%>' value="<%= plantas[i].id %>" ><%= plantas[i].nome_planta %></option>
                     <%for(j=0; j<arrayPlanta.length; j++){%>
                     <% if(plantas[i].id == arrayPlanta[j].id){%>
                     <script type="text/javascript">
                      document.getElementById('p<%-i%>').selected=true;
                    </script>
                    <%}%>
                    <%}%>
                    <%}%>
                  </select>
                </div>

                <div class="form-group">
                  <label>sensors de umidade</label>
                  <select  class="selectpicker" data-width="100%" name="sensor" multiple required>
                   <%for(i=0; i<sensores.length; i++){%>
                   <option id='s<%-i%>' value="<%= sensores[i].id %>" ><%= sensores[i].nome_sensor %></option>
                   <%for(j=0; j<arraySensor.length; j++){%>
                   <% if(sensores[i].id == arraySensor[j].id){%>
                   <script type="text/javascript">
                    document.getElementById('s<%-i%>').selected=true;
                  </script>
                  <%}%>
                  <%}%>
                  <%}%>
                </select>
              </div>

              <div class="form-group">
                <label>válvula de água</label>
                <select  class="selectpicker"  data-width="100%" name="valvula" title="valvula de água" required>
                 <%for(i=0; i<valvula.length; i++){%>
                 <% if(valvula[i].id == jardim.id_valvula){%>
                 <option value="<%= valvula[i].id %>" selected><%= valvula[i].descricao_valvula%></option>
                 <%}else{%>
                 <option value="<%= valvula[i].id %>"><%= valvula[i].descricao_valvula%></option>
                 <%}%>
                 <%}%>
               </select>
             </div>

             <div class="form-group">
              <label>sensor de fluxo de água</label>
              <select  class="selectpicker"  data-width="100%" name="agua" title="sensor de fluxo de água" required>
               <%for(i=0; i<agua.length; i++){%>
               <% if(agua[i].id == jardim.id_agua){%>
               <option value="<%= agua[i].id %>" selected><%= agua[i].descricao_agua%></option>
               <%}else{%>
               <option value="<%= agua[i].id %>"><%= agua[i].descricao_agua%></option>
               <%}%>
               <%}%>
             </select>
           </div>
         </fieldset>

         <fieldset>
           <legend>localização</legend>
           <label>estado</label>
           <div class="form-group">
          
           <select  class="selectpicker"  data-width="100%" name="estado" title="estado" required>
             <option value="<%= jardim.estado %>" selected><%= jardim.estado %></option>
           </select>
         </div>

         <label>cidade</label>
         <div class="form-group">
         
           <select  class="selectpicker"  data-width="100%" name="cidade" title="cidade" required>
             <option value="<%= jardim.cidade %>" selected><%= jardim.cidade %></option>
           </select>
         </div>
       </fieldset>


       <div class="form-group">
        <button id="botao" class="btn btn-default" type="submit"  class="btn btn-default">alterar</button>
        <a id="botao" class="btn btn-default" onclick="window.history.go(-1)">voltar</a>
        <div class="form-group">
        </form>
      </div>
      <div class="col-xs-12 col-md-4"></div>
    </div>
  </div>
</div>

</body>
</html>